{
  "manifest_version": 3,
  "name": "Minimal New Tab To-Do",
  "description": "Replaces the browser new tab with a clean, minimal task manager.",
  "version": "0.1.0",
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}